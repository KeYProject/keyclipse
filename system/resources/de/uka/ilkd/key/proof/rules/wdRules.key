\sorts{
	any;
	boolean;
	int;
	numbers;
	variable;
	Formula;
}

\schemaVariables {
	\formula a;
	\formula b;
	\term any c;
	\term any d;
	\term int e;
	\term int f;
	\term numbers n;
	\term variable v;
}

\functions{
	boolean TRUE;
	boolean FALSE;
}

\transformers {
	delta(any);
	WD(Formula);
}

\rules {
	prim_Expr_True {

		\find (
			delta(TRUE)
		)
		\replacewith (
			true
		)
		\heuristics ( concrete )
	};

	prim_Expr_False {

		\find (
			delta(FALSE)
		)
		\replacewith (
			true
		)
		\heuristics ( concrete )
	};

	logical_Op_Neg {

		\find (
			WD(!a)
		)
		\replacewith (
			WD(a)
		)
		\heuristics ( concrete )
	};

	logical_Op_Or {

		\find (
			WD(a | b)
		)
		\replacewith (
			WD(a) & (!a -> WD(b))
		)
		\heuristics ( concrete )
	};

	logical_Op_And {

		\find (
			WD(a & b)
		)
		\replacewith (
			WD(a) & (a -> WD(b))
		)
		\heuristics ( concrete )
	};

	logical_Op_Imp {

		\find (
			WD(a -> b)
		)
		\replacewith (
			(WD(a) & !a) | (WD(a) & WD(b))
		)
		\heuristics ( concrete )
	};

	logical_Op_Eqv {

		\find (
			WD(a <-> b)
		)
		\replacewith (
			WD(a) & WD(b)
		)
		\heuristics ( concrete )
	};

	equality_Pred_Eq {

		\find (
			WD(c = d)
		)
		\replacewith (
			delta(c) & delta(d)
		)
		\heuristics ( concrete )
	};

	equality_Pred_Lt {

		\find (
			WD(lt(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	equality_Pred_Leq {

		\find (
			WD(leq(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	equality_Pred_Gt {

		\find (
			WD(gt(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	equality_Pred_Geq {

		\find (
			WD(geq(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	numerical_Op_Add {

		\find (
			delta(add(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	numerical_Op_Sub {

		\find (
			delta(sub(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	numerical_Op_Mul {

		\find (
			delta(mul(e,f))
		)
		\replacewith (
			delta(e) & delta(f)
		)
		\heuristics ( concrete )
	};

	numerical_Op_Div {

		\find (
			delta(div(e,f))
		)
		\replacewith (
			delta(e) & delta(f) & !(f = 0)
		)
		\heuristics ( concrete )
	};

	conditional_Expr {

		\find (
			delta(\if (a) \then (c) \else (d))
		)
		\replacewith (
			(a & WD(a) & delta(c))
					| (!a & WD(a) & delta(d))
		)
		\heuristics ( concrete )
	};

	ref_Expr_Const {

		\find (
			delta(n)
		)
		\replacewith (
			true
		)
		\heuristics ( concrete )
	};

	ref_Expr_LocVar {

		\find (
			delta(v)
		)
		\replacewith (
			true
		)
		\heuristics ( concrete )
	};
}