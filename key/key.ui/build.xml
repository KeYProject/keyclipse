<?xml version="1.0"?>
<project name="key.ui" default="deploy" basedir=".">
	<property name="src.dir"   value="${basedir}/src" />
	<property name="build.dir" value="${basedir}/bin" />
	<property name="dist.dir"  value="${basedir}/../deployment" />

	<target name="start" depends="deploy" description="Starts the deployed KeY.">
		<java jar="${dist.dir}/key.ui.jar" fork="true" jvmargs="-Xmx2048m -XX:MaxPermSize=256m -ea" />
	</target>

	<target name="deploy" depends="compile" description="Create a JAR archive in the destination directory.">
		<mkdir dir="${dist.dir}"/>
		<zip destfile="${build.dir}/examples.zip" basedir="${basedir}/examples" />
		<jar destfile="${dist.dir}/key.ui.jar" basedir="${build.dir}" manifest="${basedir}/META-INF/MANIFEST.MF" />
	</target>

	<target name="compile" depends="copy" description="Compile all source files into the build directory.">
		<mkdir dir="${build.dir}"/>
		<javac srcdir= "${src.dir}" 
		       destdir="${build.dir}" 
		       includeantruntime="false" 
		       source="1.7" 
		       deprecation="off" 
		       debug="on" 
		       depend="${build.depend}" 
		       optimize="off">
			<classpath>
				<pathelement location="${dist.dir}/key.core.testgen.jar"/>
				<pathelement location="${dist.dir}/key.core.jar"/>
				<pathelement location="${dist.dir}/antlr.jar"/>
				<pathelement location="${dist.dir}/recoderKey.jar"/>
				<pathelement location="${dist.dir}/key.util.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="copy" description="Copy all resources into the binary directory.">
		<copy todir="${build.dir}">
			<fileset dir="${basedir}/resources/"/>
		</copy>
	</target>

	<target name="clean" description="Deletes all generated files and folders.">
		<delete failonerror="false" includeemptydirs="true"> 
			<fileset dir="${build.dir}" includes="**/*" />
			<fileset file="${dist.dir}/key.ui.jar" />
		</delete>
	</target>
</project>
